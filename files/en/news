 * icecontent("special_news");
 */

/* The site intro */
icecontent("intro");

/* Recent news */
icecontent("news_header");
newsfiles();
for($i = 0; $i < NEWSNUM; $i++) {
	/* Insert an anchor name for fragment references */
	echo '<a name=#news_"' . $i . '"></a>" . '\n';
	icecontent("$news_items[$i]");
}

/* Link to older news */
icecontent("news_bridge");
?>
