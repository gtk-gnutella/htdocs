(<?php echo $deb->get('content@filesize'); ?>)
<?php foreach($deb->get('hash') as $hash) { ?>
    - <span class="hash"><?php echo strtoupper($hash->get('@algo')); ?> <?php echo $deb->get('hash'); ?></span>
<?php } ?>
</p>

