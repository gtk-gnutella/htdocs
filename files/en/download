<h1>Download</h1>
<h4>Official releases at SourceForge</h4>

<p>
Official releases can be downloaded from SourceForge as
<a href="http://sourceforge.net/project/showfiles.php?group_id=4467">source tarballs</a>.
Cryptographic signatures for the tarballs are also available. 
</p>

<?php
$mac = NULL;
$win32 = NULL;
$bz2 = NULL;
$deb = NULL;

require_once('../../frameworks/correylib/coreylib.php');
function endsWith($haystack, $needle)
{
    $length = strlen($needle);
    $start  = $length * -1; //negative
    return (substr($haystack, $start) === $needle);
}
?>

  <?php $api = new clApi('http://sourceforge.net/api/file/index/project-id/4467/mtime/desc/limit/20/atom');
        if ($feed = $api->parse()) { ?>

    <?php foreach($feed->get('entry') as $entry) {
        if ($entry->get('default') == 'mac' && is_null($mac))
          $mac = $entry;
        if ($entry->get('default') == 'windows' && is_null($win32))
          $win32 = $entry;
        if ($entry->get('default') == 'linux,bsd,solaris,others' && is_null($bz2))
          $bz2 = $entry;
        if (endsWith($entry->get('title'), '.deb') && is_null($deb))
          $deb = $entry;
        ?>
    <?php } ?>
  <?php } ?>
  
<h5>Source</h5>
<p>Application source file .tar.bz2
<a href="<?php echo $bz2->get('link@href'); ?>"><?php echo basename($bz2->get('title')); ?></a>       
(<?php echo $bz2->get('content@filesize'); ?>)
<?php foreach($bz2->get('hash') as $hash) { ?>
    - <span class="hash"><?php echo strtoupper($hash->get('@algo')); ?> <?php echo $bz2->get('hash'); ?></span>
<?php } ?>
</p>

